font-size = 18

cursor-style = block
adjust-cursor-thickness = 300%
cursor-style-blink = true
mouse-hide-while-typing = true

window-save-state = always

keybind = alt+equal=increase_font_size:1
keybind = alt+minus=decrease_font_size:1
keybind = alt+zero=reset_font_size

keybind = global:alt+h=goto_split:left
keybind = global:alt+l=goto_split:right
keybind = global:alt+j=goto_split:bottom
keybind = global:alt+k=goto_split:top

keybind = alt+d=new_split:right
keybind = alt+shift+d=new_split:down
keybind = alt+right=resize_split:right,30
keybind = alt+left=resize_split:left,30
keybind = alt+up=resize_split:up,30
keybind = alt+down=resize_split:down,30

keybind = global:alt+c=copy_to_clipboard
keybind = global:alt+v=paste_from_clipboard
